<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Beamo Portal Test" parallel="methods" thread-count="3" verbose="1" >
    <parameter name="configfile" value="src/test/resources/config_grid.properties" />
    <test name="beamo-portal" >
        <groups>
            <run>
                <include name="abstract" />
                <include name="smoke" />
                <exclude name="non-grid" />
                <include name="smoke" />
                <include name="login" />
                <include name="site" />
                <exclude name="plan" />
            </run>
        </groups>

        <packages>
            <package name="ai.beamo.portal.tests.*" />
        </packages>
    </test>

</suite>